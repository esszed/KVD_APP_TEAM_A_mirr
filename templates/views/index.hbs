<div class="container">
    <div class="login">
        <div class="logoContainer">
            <img class="logo" src="./images/logo.png" alt="Logo_Robot">
        </div>

        <div class="loginForm">
            <form action="/" method="POST">
                <input type="email" class="form-control" id="email" name="email" placeholder="E-mail">
                <input type="password" class="form-control" id="password" name="password" placeholder="Heslo">

                <p class="regLink">
                    <a href="/registrace">Chci se registrovat</a>
                </p>

                <p class="text-center">
                    <button type="submit" class="btn btn-dark">Přihlásit</button>
                </p>
                <p class="text-center text-danger font-weight-bold">
                    {{message}}
                </p>
            </form>
        </div>
    </div>
</div>

<div class="zcu_logo">
    <img src="./images/zcu-logo.svg" alt="ZČU">
</div>