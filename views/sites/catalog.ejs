<!DOCTYPE html>
<html lang="cs">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Mono&display=swap&subset=latin-ext" rel="stylesheet">
    <link rel="stylesheet" href="../assets/style/style.css">
    <title>KVD_APP Katalog</title>
</head>

<body>
    <div class="containerCatalog">
        <nav>
            <img id="logoSmall" src="../assets/images/logo.png" alt="Logo">
            <ul>
                <li><a href="/catalog">Katalog</a></li>
                <li><a href="/mylibrary">Zapůjčené</a></li>
                <li><a href="#">Nastavení</a></li>
            </ul>
            <div id="idCard">
                <img src="../assets/images/apa_head.png" alt="Obrázek profilu">
                <div id="text">
                    <p id="name">Petr Vomáčka</p>
                    <p id="title">Správce</p>
                </div>
            </div>
        </nav>
        <a href="/">Odhlásit</a>
        <div id="searchRow">
            <div id="searchForm">
                <input type="text" placeholder="Zadej název položky..">
                <button>Hledat</button>
            </div>
            <button id="filterBtn">Filtr</button>
        </div>
        <table id="tableCatag">
            <thead>
                <tr>
                    <th>Název</th>
                    <th>Typ zařízení</th>
                    <th>Dostupné</th>
                    <th>Příslušenství</th>
                    <th>Celkem kusů k dispozici</th>
                    <th>Akce</th>
                </tr>
            </thead>
            <tbody>
                <% items.forEach(item =>{ %>
                <tr>
                    <th><%= `${item.brand} ${item.name}`%></th>
                    <th><%=item.type %></th>
                    <% if(item.times>0){%>
                    <th> Ano</th>
                    <% }else{ %>
                    <th> Ne</th>
                    <% } %>
                    <th>Žádné</th>
                    <th><%=item.times%></th>
                    <th><button name="<%= item.name %>" value="<%= item.brand %>"
                            class="yellow borrow">Vypůjčit</button><button class="blue">Rezervovat</button>
                    </th>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
<script src="..\script.js"></script>

</html>